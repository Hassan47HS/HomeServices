@model Home_Service.ViewModel.AdminViewModel

@{
    Layout = User.IsInRole("Admin") ? "_AdminLayout" : "_Layout";
}
<h2>Reject Service</h2>

<div>
    <h4>Service Details</h4>
    <p><strong>Title:</strong> @Model.RejectedServiceDetails.Title</p>
    <p><strong>Description:</strong> @Model.RejectedServiceDetails.Description</p>
    <!-- Add other service details as needed -->

    <hr />

    <form method="post" asp-action="RejectService">
        <input type="hidden" asp-for="RejectedServiceDetails.Id" />

        <div class="form-group">
            <label for="adminComment">Admin Comment:</label>
            <textarea class="form-control" id="adminComment" name="adminComment" rows="3"></textarea>
        </div>

        @* <div class="form-group">
            <label for="adminComment">Admin Comment:</label>
            <input type="text" class="form-control" id="adminComment" name="adminComment"  />
        </div>        
        *@
        <br />
        <button type="submit" class="btn btn-danger">Reject Service</button>
    </form>
</div>
